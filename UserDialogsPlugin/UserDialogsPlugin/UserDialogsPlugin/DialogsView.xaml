<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:UserDialogsPlugin;assembly=UserDialogsPlugin"
             x:Class="UserDialogsPlugin.DialogsView">
  
  <ContentPage.BindingContext>
    <ViewModels:DialogsViewModel />
  </ContentPage.BindingContext>
  
  <StackLayout>
    <Button Text="Example Prompt Dialog" Command="{Binding PromptCommand}" />
  </StackLayout>
</ContentPage>